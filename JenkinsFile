pipeline {
    agent any
    triggers {
        pollSCM('* * * * *')
    }

    stages {
        stage('GIT-Checkout'){
            steps{
                script{
                    sh'''
                        curl https://github.com/RhitamB-Eximietas/TestingFramework.git
                    '''
                }
            }
        }
        stage('Test') {
            steps{
                script{
                    sh '''
                    echo 'Checking Pre-requisites'
                    python3 --version
                    newman --version
                    pip3 install robotframework --break-system-packages
                    pip3 install robotframework-jsonlibrary --break-system-packages
                    robot TestingFW.robot  
                    ls
                    '''
                }
            }
        }
        post{
            failure{
                emailext(
                    subject: "Test Failed!!",
                    body:'''<html>
                                <body>
                                <p>Testing Failed</p>
                                <p>PFA HTML and JSON report</p>
                                </body>
                            </html>''',
                    to:'rhitam.bhattacharya@eximietas.design',
                    from: 'jenkins@example.com',
                    replyTo: 'jenkins@example.com',
                    attachmentsPattern: 'Report/HTML/report.html, Report/JSON/newman_report.json'
                )
            }
            success{
                emailext(
                    subject: "Test Successfull",
                    body:'''<html>
                                <body>
                                <p>Testing Successfull</p>
                                <p>PFA HTML and JSON report</p>
                                </body>
                            </html>''',
                    to:'rhitam.bhattacharya@eximietas.design',
                    from: 'jenkins@example.com',
                    replyTo: 'jenkins@example.com',
                    attachmentsPattern: 'Report/HTML/report.html, Report/JSON/newman_report.json'
                )
            }
        }
    }
}
