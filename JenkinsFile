pipeline {
    agent any
    triggers {
        pollSCM '* */1 * * *'
    }

    stages {
        stage('Test') {
            steps {
                docker.image('ppodgorsek/robot-framework:latest').inside {
                    sh 'robot --outputdir results tests/'
                }
                echo 'Checking Pre-requisites'
                sh '''
                python3 --version
                newman --version
                pip install robotframework
                pip install robotframework-jsonlibrary
                robot --version
                '''
                echo 'Running Tests'
                sh '''
                robot TestingFW.robot
                '''
            }
        }
    }
}
